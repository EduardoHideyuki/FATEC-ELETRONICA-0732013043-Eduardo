#include <stdio.h>
#include <unistd.h>

int main(void) {
  int s_led, s_led_direito, s_led_esquerdo, s_led_alerta;
  float s_led_aux;
  //s_led = 0: apagado
  //s_led = 1: aceso

  printf("O que deseja ligar?\n 1. Seta Esquerda\n 2. Seta Direita\n 3. Pisca Alerta\n");
  scanf("%f", &s_led_aux);

  s_led = 0;

  if(s_led_aux == 1){
    while(1)
    {
      if(s_led ==0){
      s_led = 1;
      printf("SETA ESQUERDA ACESA\n");
    }else{
      s_led = 0;
      printf("SETA ESQUERDA APAGADA\n");
    }
    sleep(1);
    }
  }else if(s_led_aux == 2){
    while(1)
    {
      if(s_led ==0){
      s_led = 1;
      printf("SETA DIREITA ACESA\n");
    }else{
      s_led = 0;
      printf("SETA DIREITA APAGADA\n");
    }
    sleep(1);
    }
  }else if(s_led_aux == 3){
    while(1)
    {
      if(s_led ==0){
      s_led = 1;
      printf("PISCA ALERTA ACESO\n");
    }else{
      s_led = 0;
      printf("PISCA ALERTA APAGADO\n");
    }
    sleep(1);
    }
  }
  return 0;
  }
